<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Description>BlazingApple is a collection of business objects and corresponding components to speed application development. BlazingApple.Components provides a set of core components to easily create beautiful applications</Description>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
		<Authors>Taylor White</Authors>
		<Company>BlazingApple</Company>
		<Copyright>2021</Copyright>
		<PackageIcon>BlazingApple.png</PackageIcon>
		<RepositoryUrl>https://github.com/BlazingApple/Components</RepositoryUrl>
		<RepositoryType>GitHub</RepositoryType>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AssemblyVersion>1.0.1.5</AssemblyVersion>
		<FileVersion>1.0.1.5</FileVersion>
		<Version>1.0.1.5</Version>
		<PackageReleaseNotes>1.0.1.5 - Add ability for tooltip content on card, and link on card title.</PackageReleaseNotes>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<Content Remove="compilerconfig.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Blazored.Toast" Version="3.1.2" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.1" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.1" PrivateAssets="all" />
		<PackageReference Include="Syncfusion.Blazor" Version="18.4.0.35" />
		<PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\..\BlazingApple.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="compilerconfig.json" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\css\components\blazingAppleComponents.scss">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</Content>
	</ItemGroup>
</Project>
