@using System.Text.RegularExpressions

@if (IsExternal(href))
{
	<a class="@className" title="@title" href="@href" target="_blank" @attributes="AdditionalAttributes">
		@ChildContent
	</a>
}
else
{
	<a class="@className" title="@title" href="@href" @attributes="AdditionalAttributes">
		@ChildContent
	</a>
}
