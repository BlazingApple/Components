<Tooltip OpenOn="TooltipOpenOn.Hover" TargetId="@(TargetId)">
	<ChildContent>
		<div id="@($"post-{_postItGuid}")" class="og-post-it">
			<div class="og-post-it-contents">
				@Comment
			</div>
		</div>
	</ChildContent>
	<TooltipContent>
		<h3 class="lead">@Title</h3>
		<div class="ba-no-results text-muted">
			@Subtitle
		</div>
		<div>
			@Comment
		</div>
	</TooltipContent>
</Tooltip>
