@using BlazingApple.Components.Services
@using s = BlazingApple.Components.Services

<div class="og-search">
	<Icon I="s.IconType.Search" />
	<input placeholder="@TitleText" @bind="@SearchTerm" type="input" />
	<button class="@_searchButtonClasses" @onclick="InternalOnSearchChange" type="button" title="Search!">
		<Icon I="s.IconType.Search" />
	</button>
	<button class="@_clearButtonClasses" @onclick="OnClearClick" disabled="@(SearchTerm==_oldSearchTerm)" type="button" title="Remove your search term!">
		<Icon I="s.IconType.Cancel" />
	</button>

</div>
