@using Syncfusion.Blazor.Popups;

@if (_isLoaded)
{
	<SfTooltip Width="@WidthStyle" CssClass="@($"e-tooltip-css {AdditionalClasses}")" OpensOn="@OpenOn.ToString()" Target="@TargetId" CloseDelay="@CloseDelay">
		<TooltipTemplates>
			<Content>
				@TooltipContent
			</Content>
		</TooltipTemplates>
		@ChildContent
	</SfTooltip>
}